<div class="section section--map">
  <div class="container">
    <div class="map">
      <div class="user-info">
        {{!-- <div class="user-info__pic">
          <img src="http://www.fillmurray.com/200/200" alt="" class="user-avatar">
        </div> --}}
        <div class="user-info__content">
          <h1 class="user-info__title">Bill_Murray65</h1>
          {{!-- <p class="user-info__title">Followed by X travelers</p>
          <p class="user-info__title">Following X travelers</p> --}}
        </div>
      </div>
      {{#leaflet-map maxBounds=bounds lat=lat lng=lng zoom=zoom scrollWheelZoom=false zoomAnimation=true minZoom=2 dragging=true}}
        {{tile-layer bounds=bounds url="https://{s}.tile.thunderforest.com/landscape/{z}/{x}/{y}.png?apikey=1d96d3945c5340ea9bee6e79ba94b664"}}

        {{#marker-layer location=ironYard}}
          {{#popup-layer}}
            <img src="https://pbs.twimg.com/profile_images/552955646346145793/DKlUDGsR.png" alt="">
          {{/popup-layer}}
        {{/marker-layer}}
        {{#each data.trips as |trip|}}
          {{!-- {{#marker-layer location=trip.}}
            {{#popup-layer}}
              <div class="map-pic">
                <button class="scrollBtn" {{action "scroll" trip}}>
                  <h4 class="map-pic__location">{{trip.location}}</h4>
                </button>
                <p class="map-pic__user">by {{trip.user}}</p>
                <img src= {{trip.cover}} class="map-pic__pic">
              </div>
            {{/popup-layer}}
          {{/marker-layer}} --}}
        {{/each}}
      {{/leaflet-map}}
    </div>
  </div>
</div>

